-#  This file is app/views/players/index.html.haml
%h1 Your Team

%table#players
  %thead
    %tr
      %th Name
      %th Position
      %th Team
      %th More Info
  %tbody
    - @players.each do |player|
      %tr
        %td= player[:name] 
        %td= player[:position]
        %td= player[:team]
        %td= link_to "More about #{player.name}", player_path(player)
        
= link_to 'Add new player', new_player_path
