-# edit.html.haml using partial

%h1 Edit Existing Player

= form_tag player_path(@player), :method => :put do

  = label :player, :name, 'Name'
  = text_field :player, 'name'

  = label :player, :position, 'Position'
  = select :player, :position, ['QB','RB','WR','TE','D','K']

  = label :player, :release_date, 'Released On'
  = date_select :player, :release_date

  = submit_tag 'Update Player Info'
