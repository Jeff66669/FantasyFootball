%h1 Create New Player

= form_tag players_path do

  = label :player, :name, 'Name'
  = text_field :player, 'name'

  = label :player, :position, 'Position'
  = select :player, :position, ['QB','RB','WR','TE','D','K']

  = label :movie, :release_date, 'Released On'
  = date_select :movie, :release_date

  = submit_tag 'Save Changes'
